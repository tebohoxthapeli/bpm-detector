{
  "permissions": {
    "allow": [
      "Read(src/**)",
      "Read(public/**)",
      "Read(*.json)",
      "Read(*.md)",
      "Read(*.ts)",
      "Read(*.tsx)",
      "Read(*.css)",
      "Read(.claude/**)",
      "Edit(src/**)",
      "Edit(public/**)",
      "Write(src/**)",
      "Write(public/**)",
      "Write(.claude/**)",
      "Bash(bun:*)",
      "Bash(bun run:*)",
      "Bash(bunx:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git stash:*)",
      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(open:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(rm -r:*)",
      "Bash(rm -fr:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(> /dev:*)",
      "Bash(dd if:*)",
      "Bash(mkfs:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)",
      "Read(.env*)",
      "Read(**/secrets*)",
      "Read(**/*credential*)",
      "Read(**/*password*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Write(.env*)",
      "Write(**/secrets*)",
      "Write(**/*credential*)",
      "Write(bun.lock)",
      "Edit(.env*)",
      "Edit(bun.lock)"
    ]
  }
}

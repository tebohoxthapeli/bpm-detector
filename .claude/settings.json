{
  "permissions": {
    "allow": [
      "Read(src/**)",
      "Read(public/**)",
      "Read(*.json)",
      "Read(*.md)",
      "Read(*.ts)",
      "Read(*.tsx)",
      "Read(*.css)",
      "Read(.claude/**)",
      "Edit(src/**)",
      "Edit(public/**)",
      "Write(src/**)",
      "Write(public/**)",
      "Write(.claude/**)",
      "Bash(bun:*)",
      "Bash(bun run:*)",
      "Bash(bunx:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git stash:*)",
      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(open:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf .)",
      "Bash(rm -rf ..)",
      "Bash(rm:*.env*)",
      "Bash(rm:*credentials*)",
      "Bash(rm:*secret*)",
      "Bash(rm:*token*)",
      "Bash(chmod 777:*)",
      "Bash(curl:*| bash)",
      "Bash(curl:*| sh)",
      "Bash(wget:*| bash)",
      "Bash(wget:*| sh)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Edit(.env*)",
      "Write(.env*)",
      "Read(.env.local)",
      "Read(.env.production)"
    ]
  }
}

{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "recommended": true,
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "css": {
    "assist": {
      "enabled": false
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 80,
      "quoteStyle": "double"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowWrongLineComments": true,
      "cssModules": true,
      "tailwindDirectives": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!.next",
      "!node_modules",
      "!dist",
      "!build",
      "!coverage",
      "!.vercel",
      "!out",
      "!*.log",
      "!.DS_Store"
    ],
    "maxSize": 2097152
  },
  "formatter": {
    "attributePosition": "multiline",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "enabled": true,
    "expand": "always",
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "useEditorconfig": false
  },
  "html": {
    "assist": {
      "enabled": true
    },
    "experimentalFullSupportEnabled": true,
    "formatter": {
      "attributePosition": "multiline",
      "bracketSameLine": false,
      "enabled": true,
      "indentScriptAndStyle": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 80,
      "selfCloseVoidElements": "always",
      "whitespaceSensitivity": "css"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "interpolation": false
    }
  },
  "javascript": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "arrowParentheses": "asNeeded",
      "attributePosition": "multiline",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "enabled": true,
      "expand": "always",
      "indentStyle": "space",
      "indentWidth": 2,
      "jsxQuoteStyle": "single",
      "lineEnding": "lf",
      "lineWidth": 80,
      "operatorLinebreak": "before",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "es5"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "gritMetavariables": false,
      "jsxEverywhere": false,
      "unsafeParameterDecoratorsEnabled": false
    }
  },
  "json": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "bracketSpacing": true,
      "enabled": true,
      "expand": "always",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 80,
      "trailingCommas": "none"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": false
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "noSvgWithoutTitle": "warn",
        "recommended": true
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn",
        "noImportantStyles": "off",
        "recommended": true,
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noUnusedFunctionParameters": "off",
        "noUnusedVariables": "warn",
        "recommended": true,
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "info",
          "options": {
            "attributes": [
              "className"
            ],
            "functions": [
              "clsx",
              "cva",
              "cn",
              "tw"
            ]
          }
        }
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noDelete": "error",
        "recommended": true
      },
      "recommended": true,
      "security": {
        "recommended": true
      },
      "style": {
        "noNonNullAssertion": "warn",
        "recommended": true,
        "useConsistentArrayType": {
          "fix": "safe",
          "level": "error",
          "options": {
            "syntax": "shorthand"
          }
        },
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "filenameCases": [
              "kebab-case"
            ],
            "requireAscii": true
          }
        },
        "useImportType": "error",
        "useNodejsImportProtocol": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "recommended": true
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "src/App.tsx"
      ],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": [
        "src/App.tsx",
        "src/main.tsx",
        "src/app/**",
        "src/pages/**"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.test.{js,ts,jsx,tsx}",
        "**/*.spec.{js,ts,jsx,tsx}",
        "**/__tests__/**"
      ],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          },
          "suspicious": {
            "noExplicitAny": {
              "level": "warn"
            }
          }
        }
      }
    },
    {
      "includes": [
        "**/*.config.{js,ts}",
        "**/tailwind.config.{js,ts}"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*/globals.css"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noUnknownAtRules": "off"
          }
        }
      }
    }
  ],
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
